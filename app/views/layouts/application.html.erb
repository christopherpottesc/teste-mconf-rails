  <body>
    <%= nav_bar brand:"Projeto Mconf", brand_link: root_url do %>
      <%= menu_group do %>
        <%= menu_item "Proposta", proposta_path %>
      <% end %>
    <% end %>

    <div class="container" style="min-height: 70vh">
      <%= yield %>
    </div>

    <footer>
      <div id="contact-area">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <h3>CONTATO</h3>
            </div>
            <div class="col-md-6 contact-box">
                <i class="bi bi-linkedin"></i>
                <p>
                  <a href="https://www.linkedin.com/in/christopherpottesc/" target="_blank">
                    <span class="contact-title">LinkedIn</span>
                  </a>
                </p>
            </div>
            <div class="col-md-6 contact-box">
              <a href="https://github.com/christopherpottesc" target="_blank">
                <i class="bi bi-github"></i>
                <p>
                  <span class="contact-title">GitHub</span>
                </p>
              </a>
            </div>
          </div>
        </div>
      </div>
      <div id="copy-area">
        <div class="container">
          <div class="row">
            <div class="col-md-12">
              <p> Densenvolvidor por <span>Christopher Pottes</span> &copy; 2021. </p>
            </div>
          </div>
        </div>
      </div>
    </footer>
